{
  "manifest_version": 3,
  "name": "Dark/Light Mode Switcher",
  "version": "1.0",
  "description": "A simple extension to switch between dark and light modes on websites",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Dark/Light Mode"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}